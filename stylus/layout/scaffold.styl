/***************************************************************************************
/* Layout / Scaffold
/***************************************************************************************/
.o-container
  margin-left auto
  margin-right auto
  max-width 100%
.o-flex-container
  @extends .o-container
  display flex
.o-row
  @extends .o-flex-container
  flex-direction row
  flex-wrap wrap
.o-row--reverse
  flex-direction row-reverse
.o-col
  flex-direction column
.o-center
  @extends .o-col
  justify-content space-around
  align-items center
