/***********************\
  Layout / Scaffold
\***********************/

.o-container
  margin-left auto
  margin-right auto
  max-width 100%
.o-flex-container
  @extends .o-container
  display flex
.o-fullwidth-container
  @extends .o-flex-container
  width 100%
.o-row
  @extends .o-flex-container
  width 100%
  flex-direction row
  flex-wrap wrap
.o-row--reverse
  @extends .o-row
  flex-direction row-reverse
.o-col
  @extends .o-flex-container
  flex-direction column
.o-col--reverse
  flex-direction column-reverse
.o-center
  //justify-content center
  align-items center
