/***********************\
  Layout / Grid
\***********************/

.o-grid__container
  position relative
  min-height 100%
  o-col()
  @media MQ-MED
    o-row()
.o-grid__container--reverse
  flex-wrap nowrap
  @media MQ-MED
    o-row--reverse()

[class*="o-grid__minor"]
  width 100%
  //flex 0 1 100%
  @media MQ-MED
    flex 1 1 30%
[class*="o-grid__major"]
  //flex 1 1 100%
  @media MQ-MED
    flex 1 1 70%

.o-grid__pinned-left, .o-grid__pinned-right
  @media MQ-MED
    position absolute
    top 1rem
    width 20%
.o-grid__pinned-left
  @media MQ-MED
    left 1rem
.o-grid__pinned-right
  @media MQ-MED
    right 1rem
