/**************
 * HEADER STYLES
 **************/

.header
  @extend .flex-container
  flex-direction row
  position fixed
  width 100%
  height 90px
  padding 10px
  left 0
  bottom 0
  align-content stretch
  // background-color alpha(white, 20%)
  z-index Z-NAVIGATION
.navigation
  @extend .flex-container
  flex-direction row-reverse
  width 100%
.nav-list
  @extend .flex-container
  justify-content flex-end
  overflow hidden
  max-width 100%
  max-width 0
  transition max-width 400ms ease
.nav-list__item
  padding 1em
  text-align center
.nav-button
  cursor pointer
  width width = 70px
  height width
  background-color alpha(white, 50%)
  border-radius 50%
  background-image radial-gradient(MAINCOLOR 45%, transparent 50%)
  background-repeat repeat-x
  background-size (width / 3) (width / 3)
  background-position 0 50%
  overflow hidden
  transition background-position 400ms ease
  &:hover
    background-position -(width) 50%
