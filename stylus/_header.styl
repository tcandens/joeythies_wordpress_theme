/**************
 * HEADER STYLES
 **************/

.header
  @extend .flex-container
  flex-direction row
  position fixed
  width 100%
  height 90px
  padding 10px
  left 0
  bottom 0
  align-content stretch
  z-index Z-NAVIGATION
.navigation
  @extend .flex-container
  flex-direction row-reverse
  justify-content space-between
  width 100%
.nav-list
  @extend .flex-container
  align-items center
  background-color alpha(white, 50%)
  transform translate3d(0, 80px, 0)
  transition transform 400ms ease-in-out
.nav-list__item
  padding 0 0.8em
  font-size 1.4em
  font-weight 700
  text-align center
.nav-button
  cursor pointer
  width width = 70px
  height width
  background-color alpha(white, 50%)
  border-radius 50%
  background-image radial-gradient(MAINCOLOR 45%, transparent 50%)
  background-repeat repeat-y
  background-size (width / 3) (width / 3)
  background-position 50% 50%
  overflow hidden
  transition background-position 400ms ease
  &:hover
    background-position 50% ( width * -1 )
