/***************************************************************************************
/* Components / Window
/***************************************************************************************/
.window
  border-radius 1em 1em 0 0
  background-color white
  padding 1.2em 0 0 0
  border 0.5em solid white
  border-top 0
  &:before
    display block
    content ''
    position relative
    top -0.6em
    left 0.2em
    width 0.4em * 8
    height 1em
    pip-radius = 0.3em
    x = pip-radius
    background-image radial-gradient(circle at x 0.5em, RED, RED pip-radius, transparent pip-radius), radial-gradient(circle at x*4 0.5em, RED, RED pip-radius, transparent pip-radius), radial-gradient(circle at x*7 0.5em, RED, RED pip-radius, transparent pip-radius)
