/*********************************\
  Components / Window
  @@ Styles container into a
  @@ browser window
\*********************************/

.c-window
  width 50rem
  max-width 100%
  border-radius 1rem 1rem 0 0
  spacer()
  background-color white
  padding 1.2rem 0 0 0
  border 0.5rem solid white
  border-top 0
  line-height 0
  &:before
    display block
    content ''
    position relative
    top -0.6em
    left 0.2em
    width 0.4em * 8
    height 1rem
    pip-radius = 0.3em
    x = pip-radius
    background-image radial-gradient(circle at x 0.5em, RED, RED pip-radius, transparent pip-radius), radial-gradient(circle at x*4 0.5em, RED, RED pip-radius, transparent pip-radius), radial-gradient(circle at x*7 0.5em, RED, RED pip-radius, transparent pip-radius)
  & code, & pre
    background-color white
.c-window--negative
  @extends .c-window
  background-color MAINCOLOR
  border-color MAINCOLOR
