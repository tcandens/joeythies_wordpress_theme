/*********************************\
  Components / Navigation
\*********************************/

.c-navigation-button
  position fixed
  bottom 0.6em
  right 0.5em
  cursor pointer
  width width = 60px
  height width
  background-color alpha(white, 30%)
  border-radius 50%
  background-image radial-gradient(MAINCOLOR 45%, transparent 50%)
  background-repeat repeat-y
  // Change state on is-navigation-open
  background-size (width / 3) (width / 3)
  background-position 50% 50%
  overflow hidden
  transition background-position 400ms ease
  transform translate3d(0, 0, 0)
  z-index Z-NAV-BUTTON
  .is-navigation-open &
    background-position 50% -100%
.c-navigation
  position fixed
  left 0
  bottom 0
  width 100%
  height 80px
  margin 0
  transform translate3d(0, 80px, 0)
  transition transform 400ms ease-in-out
  z-index Z-NAVIGATION
  .is-navigation-open &
    box-shadow 0 0 2em alpha(MAINCOLOR, 50%)
    transform translate3d(0, 0, 0)
.c-navigation__list
  @extends .o-row
  width 100%
  height 100%
  align-items center
  justify-content space-around
  flex-wrap nowrap
  background-color white
  &:last-child
    padding-right 70px
.c-navigation__list__item
  display block
  padding 0 0.8em
  font-size 1.4em
  font-weight 700
  text-align center
  align-items center
.c-navigation__logo
  @extends .o-flex-container
  height 100%
  .c-logo
    width 60px
    height 60px
  .c-logo__jt
    fill MAINCOLOR
  .c-logo__circle
    stroke MAINCOLOR
  &:hover
    .c-logo__jt
      fill RED
    .c-logo__circle
      stroke RED
