/*********************************\
  Components / Underline
\*********************************/

.c-underline
  position relative
  display inline
  &:after
    content ''
    position absolute
    display block
    width 100%
    height 3px
    left 0
    bottom -1px 
    background-image url('images/underline.gif')
    background-repeat repeat-x
  &:hover
    &:after
      background-position 0 -3px
