/*********************************\
  Components / Single Post & Work
\*********************************/

.c-single
  margin 1rem 0.5rem
.c-single__top
  space-around()
  @media MQ-LARGE
    space-between()
.c-single__header
  margin 0 0 2rem 0
.c-single__content
  min-height 100%
  @media MQ-LARGE
    margin-top 2rem
.c-single .c-logo
  width 100px
  height 100px
  .c-logo__circle
    display none
    visibility hidden
