/*********************************\
  Components / Tags
\*********************************/

.c-tag
  position relative
  height 1.75rem
  font-size 0.5rem
  font-family monofont
  font-weight 900
  text-transform uppercase
  margin-right 1.5rem
  padding 0.25rem 0.75rem
  color white
  $tag-color = BLACK
  background-color $tag-color
  &:before
    content ''
    display block
    position absolute
    top 0
    left 100%
    width 0
    height 0
    border-style solid
    border-width 0.875rem 0 0.875rem 1rem
    border-color transparent transparent transparent $tag-color
  &:after
    content ''
    display block
    position absolute
    top 0
    left 100%
    width 1rem
    height 100%
    background radial-gradient(circle at 3px 50%, white 0, white 3px, transparent 3px, transparent 100%)
  a
    color white
