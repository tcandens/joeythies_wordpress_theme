/*********************************\
  Templates / Home
\*********************************/

.t-main
  position relative
  margin-bottom 2rem
  .c-logo
    margin-bottom 1rem
    @media MQ-MED
      width 100px
      height 100px
  .c-insetbox__inner
    max-width 50rem
    justify-content center
    @media MQ-MED
      height 400px
.t-post-preview
  max-width 20rem
  margin-top 3rem
  margin-bottom 2rem
.t-post-preview + .t-post-preview
  margin-top 0

.t-work-preview
  padding 1rem
  padding-top 2rem
  & > a
    margin 0 auto
    max-width 100%
  &:last-of-type
    margin-bottom 0
.t-work-preview__hgroup
  margin-bottom 1rem
  color white
