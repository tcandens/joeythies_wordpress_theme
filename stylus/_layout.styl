/*********************
 * BASIC LAYOUT STYLES
 *********************/

.container
  margin-left auto
  margin-right auto
  max-width 100%
.flex-container
  @extends .container
  display flex
.row
  @extends .flex-container
  flex-direction row
  flex-wrap wrap
.row-reverse
  flex-direction row-reverse
.col
  flex-direction column
.center
  @extends .col
  justify-content space-around
  align-items center
