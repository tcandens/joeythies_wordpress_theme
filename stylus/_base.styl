/**************
 * BASE STYLES
 **************/

.flex-container
  display flex
.flex-center
  @extend .flex-container
  flex-direction column
  align-items center

.outline-box
  position relative
  margin -1em 0 0 -1em
  padding 1em
  border 0.5em solid BLUE
  background-color white
.line-shadow
  max-width 30em
  top 1em
  left 1em
  padding 0 1em 1em 0
  margin 1em 0 1em 1em
  lines(BLUE, 3px, 11px, -45)

.header
  @extend .flex-container
  flex-direction row
  position fixed
  width 100%
  height 90px
  padding 10px
  left 0
  bottom 0
  align-content stretch
  background-color alpha(black, 10%)
.navigation
  @extend .flex-container
  flex-direction row-reverse
  width 100%
.nav-list
  @extend .flex-container
  justify-content flex-end
  overflow hidden
  max-width 100%
  max-width 0
  transition max-width 400ms ease
.nav-list__item
  padding 1em
  text-align center
.nav-button
  width width = 70px
  height width
  background-color alpha(white, 50%)
  border-radius 50%
  background-image radial-gradient(BLUE 45%, transparent 50%)
  background-repeat repeat-x
  background-size (width / 3) (width / 3)
  background-position 0 50%
  overflow hidden
  transition background-position 400ms ease
  &:hover
    background-position -(width * 3.333) 50%
.logo-svg
  width 70px
  height 70px
.logo-svg-jt
  fill LOGOCOLOR
.logo-svg-circle
  stroke LOGOCOLOR
  stroke-width 4px
  fill none
