<button class="c-navigation-button js-navigation-button"></button>
<nav class="c-navigation">
  <ul class="c-navigation__list">
    {% if is_home == false %}
      <li class="c-navigation__list__item">
        <a class="c-navigation__logo" href="{{ site.url }}">
          {% include 'logo.twig' %}
        </a>
      </li>
    {% endif %}
    {% if menu %}
      {% for item in menu %}
        <li class="c-navigation__list__item">
          <a href="{{ [ site.url, item.link ]|join('/') }}">
            {{ item.name }}
          </a>
        </li>
      {% endfor %}
    {% endif %}
  </ul>
</nav>
