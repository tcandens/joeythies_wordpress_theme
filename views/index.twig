{% extends "base.twig" %}

{% block content %}
  <main class="container flex-center" role="main">
    {% if intro %}
      <header class="header">
        <section class="header-inner bordered">
          {% include "logo.twig" %}
          {{ intro.content }}
        </section>
      </header>
    {% endif %}
    {% for post in posts %}
      {% include post.post_type~"-entry.twig" %}
    {% endfor %}
  </main>
{% endblock %}
